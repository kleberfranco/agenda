{% extends 'base.html.twig' %}

{% block page_stylesheets %}
    <link href="{{ asset('assets/vendor/bootstrap-table/dist/bootstrap-table.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/notific8/dist/notific8.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}

    <div id="main" class="container-fluid" style="margin-top: 50px">

        <div id="top" class="row">
            <div class="col-sm-3">
                <h2>Contatos</h2>
            </div>

            <div class="col-sm-9">
                <a href="javascript:" class="create btn btn-primary pull-right h2">Novo Contato</a>
                <span class="alert"></span>
            </div>
        </div> <!-- /#top -->

        <hr />
        <div id="list" class="row">

            <div class="table-responsive col-md-12">
                <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="table" data-search="true" data-show-columns="true" data-pagination="true" data-advanced-search="true"
                       data-show-refresh="true" data-show-toggle="true" data-id-table="advancedTable" data-click-to-select="true"
                       data-mobile-responsive="true"
                       data-check-on-init="true">
                    <thead>
                    <tr>
                        <th data-field="contactid" data-sortable="true">ID</th>
                        <th data-field="name" data-sortable="true">Nome</th>
                        <th data-field="phone" data-sortable="true">Telefone</th>
                        <th data-field="email" data-sortable="true">E-mail</th>
                        <th data-field="status" data-sortable="true">Status</th>
                        <th data-field="action"
                            data-align="center"
                            data-class="actions"
                            data-formatter="actionFormatter"
                            data-events="actionEvents">Ações</th>
                    </tr>
                    </thead>
                </table>
            </div>

        </div> <!-- /#list -->
    </div> <!-- /#main -->


    <!-- Modal -->
    <div id="modal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"></h4>
                </div>
                <form  id="form-contact" data-parsley-validate="true">
                <div class="modal-body">

                    <input type="hidden" name="contatoid" id="contatoid">
                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" class="form-control" name="name" placeholder="Nome" data-parsley-required="true" required>
                    </div>
                    <div class="form-group">
                        <label>Telefone</label>
                        <input type="text" class="form-control" name="phone" id="phone" placeholder="Telefone" pattern="\([0-9]{2}\)[\s][0-9]{4}-[0-9]{4,5}" data-parsley-required="true" required>
                    </div>
                    <div class="form-group">
                        <label>E-mail</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="E-mail" data-parsley-required="true" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary submit">Salvar</button>
                </div>
                </form>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}
{% block page_javascript %}
    <script src="{{ asset('assets/vendor/bootstrap-table/dist/bootstrap-table.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap-table/dist/extensions/toolbar/bootstrap-table-toolbar.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap-table/dist/locale/bootstrap-table-pt-BR.js') }}"></script>
    <script src="{{ asset('assets/vendor/jquery.maskedinput/dist/jquery.maskedinput.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/parsleyjs/dist/parsley.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/notific8/dist/jquery.notific8.min.js') }}"></script>
    <script src="{{ asset('assets/js/contact.js') }}"></script>
{% endblock %}
